<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Market_NoTab.Pages.SearchPage"
             Title="Search"
              BackgroundColor="#8585ad">
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="20">
            <Frame CornerRadius="20" HorizontalOptions="FillAndExpand" BackgroundColor="#d1d1e0">
                <StackLayout>
                    <Frame BackgroundColor="White" HeightRequest="45" CornerRadius="10">
                        <Entry x:Name="Search_Entry" 
                           Placeholder="Enter here..." 
                            HorizontalOptions="FillAndExpand"
                               PlaceholderColor="#8585ad"
                               TextColor="#8585ad"
                               VerticalOptions="Center"/>
                    </Frame>
                   
                    <Button Text="Search" 
                    Clicked="Start_Search"
                    HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
           
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>